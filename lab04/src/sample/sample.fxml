<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField ?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.DatePicker?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Text text="Java FX Sample" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Label text="username" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="nameField" onKeyPressed="#onKeyPress" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="password" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="password" onKeyPressed="#onKeyPress" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="what is your name?" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="fullName" onKeyPressed="#onKeyPress" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="E-Mail" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="email" onKeyPressed="#onKeyPress" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="phone number (123-456-7890)" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="phoneNumber" onKeyPressed="#onKeyPress" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <DatePicker id="datePicker" fx:id="datePicker" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <Button id="enterBtn" fx:id="enterBtn" onAction="#btnOnPress" text="enter" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
</GridPane>